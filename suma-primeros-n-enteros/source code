#include <stdio.h>

int main()
{
    int i,a;
    printf ("Ingrese: ");
    scanf ("%d",&a);
    for (i=1;i<=a;i++)
    {
        a+=i;
    }
    printf ("La suma de los primeros %d enteros es %d",i,a);
    return 0;
}
